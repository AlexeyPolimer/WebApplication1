<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Product App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Подключаем Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-boxes"></i> Product App
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Главная
                        </a>
                    </li>
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-edit"></i> Мои продукты
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Profile">
                                <i class="fas fa-user"></i> Личный кабинет
                            </a>
                        </li>
                        <!-- Для админов -->
                        @if (Context.Session.GetString("UserRole") != "User")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-crown"></i> Админ-панель
                                </a>
                            </li>
                        }
                        <!-- Только для супер-админа -->
                        @if (Context.Session.GetString("UserRole") == "SuperAdmin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-controller="Admin" asp-action="ServerStats">
                                    <i class="fas fa-server"></i> Мониторинг
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-controller="Admin" asp-action="Backups">
                                    <i class="fas fa-database"></i> Бэкапы
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-trash"></i> Корзина
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="DeletedUsers"><i class="fas fa-users"></i> Пользователи</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="DeletedProducts"><i class="fas fa-box"></i> Товары</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">
                                <i class="fas fa-user"></i>
                                @Context.Session.GetString("Username")
                                @if (Context.Session.GetString("UserRole") != "User")
                                {
                                    <span class="badge bg-warning ms-1">@Context.Session.GetString("UserRole")</span>
                                }
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Выйти
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Login">
                                <i class="fas fa-sign-in-alt"></i> Вход
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Register">
                                <i class="fas fa-user-plus"></i> Регистрация
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>