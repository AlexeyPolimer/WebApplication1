@model List<Product>
@{
    ViewData["Title"] = "Корзина товаров";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash"></i> Корзина товаров</h2>
    <p class="text-muted">Только для супер-администратора</p>

    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Изображение</th>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Владелец</th>
                    <th>Удален</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" alt="@product.Name"
                                     style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                     style="width: 50px; height: 50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.Quantity</td>
                        <td>@product.User?.Username</td>
                        <td>@product.DeletedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <form method="post" asp-action="RestoreProduct" class="d-inline">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-undo"></i> Восстановить
                                    </button>
                                </form>
                                <form method="post" asp-action="PurgeProduct" class="d-inline">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Полностью удалить товар @product.Name? Это действие необратимо!')">
                                        <i class="fas fa-fire"></i> Удалить
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle"></i> Корзина товаров пуста
        </div>
    }

    <div class="mt-3">
        <a asp-action="Products" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Назад к товарам
        </a>
        <a asp-action="DeletedUsers" class="btn btn-outline-secondary">
            <i class="fas fa-users"></i> Корзина пользователей
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>