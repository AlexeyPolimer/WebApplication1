@model List<string>
@{
    ViewData["Title"] = "Управление бэкапами";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-database"></i> Управление бэкапами</h2>
    <p class="text-muted">Только для супер-администратора</p>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Действия</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="CreateBackup" class="d-inline">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i> Создать новый бэкап
                        </button>
                    </form>
                    <a asp-action="ServerStats" class="btn btn-outline-info">
                        <i class="fas fa-server"></i> Мониторинг
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Назад в админ-панель
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Доступные бэкапы</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Имя файла</th>
                                        <th>Размер</th>
                                        <th>Дата создания</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var backup in Model)
                                    {
                                        var fileInfo = new System.IO.FileInfo(System.IO.Path.Combine("wwwroot/backups", backup));
                                        <tr>
                                            <td>
                                                <i class="fas fa-file-alt text-primary"></i>
                                                @backup
                                            </td>
                                            <td>@(fileInfo.Length / 1024) KB</td>
                                            <td>@fileInfo.CreationTime.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <form method="post" asp-action="DownloadBackup" class="d-inline">
                                                        <input type="hidden" name="fileName" value="@backup" />
                                                        <button type="submit" class="btn btn-info">
                                                            <i class="fas fa-download"></i> Скачать
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-action="RestoreBackup" class="d-inline">
                                                        <input type="hidden" name="fileName" value="@backup" />
                                                        <button type="submit" class="btn btn-warning"
                                                                onclick="return confirm('ВНИМАНИЕ! Это перезапишет текущую базу данных. Продолжить?')">
                                                            <i class="fas fa-undo"></i> Восстановить
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-action="DeleteBackup" class="d-inline">
                                                        <input type="hidden" name="fileName" value="@backup" />
                                                        <button type="submit" class="btn btn-danger"
                                                                onclick="return confirm('Удалить бэкап @backup?')">
                                                            <i class="fas fa-trash"></i> Удалить
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                Всего бэкапов: @Model.Count |
                                Общий размер: @(Model.Sum(b => new System.IO.FileInfo(System.IO.Path.Combine("wwwroot/backups", b)).Length) / 1024 / 1024) MB
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center py-4">
                            <i class="fas fa-database fa-3x mb-3"></i>
                            <h5>Бэкапы не найдены</h5>
                            <p class="mb-0">Создайте первый бэкап базы данных</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
    </div>
}