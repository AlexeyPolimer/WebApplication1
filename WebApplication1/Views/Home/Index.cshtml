@{
    ViewData["Title"] = "Главная";
    Layout = "_Layout";

    var allProducts = ViewBag.AllProducts as List<Product>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-boxes"></i> Каталог всех продуктов
                    </h4>
                </div>
                <div class="card-body">
                    @if (allProducts != null && allProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Владелец</th>
                                        <th>Название продукта</th>
                                        <th>Цена</th>
                                        <th>Количество</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in allProducts)
                                    {
                                        <tr>
                                            <td class="fw-bold">@product.User?.Username</td>
                                            <td>@product.Name</td>
                                            <td class="text-success fw-bold">@product.Price.ToString("C")</td>
                                            <td>
                                                <span class="badge bg-secondary">@product.Quantity шт.</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3 p-3 bg-light rounded">
                            <h6 class="mb-0">
                                <i class="fas fa-info-circle"></i>
                                Всего продуктов в системе: <span class="badge bg-primary">@allProducts.Count</span>
                            </h6>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Каталог пуст</h4>
                            <p class="text-muted">Пока в системе нет продуктов.</p>
                            @if (Context.Session.GetInt32("UserId") == null)
                            {
                                <a asp-action="Register" class="btn btn-primary mt-2">
                                    <i class="fas fa-user-plus"></i> Зарегистрируйтесь и добавьте первый товар!
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Products" asp-action="Index" class="btn btn-success mt-2">
                                    <i class="fas fa-plus"></i> Добавить первый товар
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>