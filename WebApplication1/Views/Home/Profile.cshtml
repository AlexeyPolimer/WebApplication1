@model User
@{
    ViewData["Title"] = "Личный кабинет";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <!-- Статистика -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar"></i> Моя статистика
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h3>@ViewBag.TotalProducts</h3>
                                    <p class="mb-0">Всего продуктов</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h3>@ViewBag.TotalValue.ToString("C")</h3>
                                    <p class="mb-0">Общая стоимость</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.TotalProducts > 0)
                    {
                        <div class="mt-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h5>@ViewBag.AveragePrice.ToString("C")</h5>
                                    <p class="mb-0">Средняя цена продукта</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Быстрые действия -->
            <div class="card mt-4">
                <div class="card-header bg-secondary text-white">
                    <h6 class="card-title mb-0">Быстрые действия</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-boxes"></i> Управление продуктами
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">
                            <i class="fas fa-home"></i> На главную
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Редактирование профиля -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-edit"></i> Редактирование профиля
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="UpdateProfile">
                        <div class="mb-3">
                            <label class="form-label">Имя пользователя</label>
                            <input type="text" class="form-control" name="username" value="@Model.Username" required>
                        </div>

                        <hr>
                        <h6>Смена пароля</h6>
                        <p class="text-muted small">Заполняйте только если хотите сменить пароль</p>

                        <div class="mb-3">
                            <label class="form-label">Текущий пароль</label>
                            <input type="password" class="form-control" name="currentPassword" placeholder="Введите текущий пароль">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Новый пароль</label>
                            <input type="password" class="form-control" name="newPassword" placeholder="Введите новый пароль">
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-save"></i> Сохранить изменения
                        </button>
                    </form>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                        </div>
                    }
                </div>
            </div>

            <!-- Информация о аккаунте -->
            <div class="card mt-4">
                <div class="card-header bg-dark text-white">
                    <h6 class="card-title mb-0">Информация об аккаунте</h6>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>ID пользователя:</strong></td>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <td><strong>Дата регистрации:</strong></td>
                            <td>@Model.Id</td> <!-- В реальном приложении здесь была бы дата -->
                        </tr>
                        <tr>
                            <td><strong>Статус:</strong></td>
                            <td><span class="badge bg-success">Активен</span></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>